<UserControl x:Class="PrincessTowerDefence.View.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrincessTowerDefence.View"
             mc:Ignorable="d" 
             d:DesignHeight="560" d:DesignWidth="200">
    <Grid>
        <StackPanel Background="#ffb6da" Orientation="Vertical" >
            <StackPanel Margin="0,50,0,0" Orientation="Horizontal">
                <Button Width="100" Height="50"></Button>
                <Label Height="50" TextBlock.FontSize="30">5</Label>
            </StackPanel>
            <StackPanel Margin="0,50,0,0" Orientation="Horizontal">
                <Button Width="100" Height="50"></Button>
                <Label Height="50" TextBlock.FontSize="30">5</Label>
            </StackPanel>
            <StackPanel Margin="0,50,0,0" Orientation="Horizontal">
                <Button Width="100" Height="50"></Button>
                <Label Height="50" TextBlock.FontSize="30">5</Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
